{
  "name": "ecommerce-nodejs-rest",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=development ts-node-dev --poll src/index.ts",
    "test": "NODE_ENV=test jest --runInBand --no-cache",
    "dev-test": "NODE_ENV=test jest --runInBand --watchAll --no-cache",
    "db:drop": "./node_modules/.bin/ts-node src/database/umzug/drop.ts",
    "db:create": "ts-node-dev src/database/umzug/migrate.ts",
    "db:migrate": "ts-node-dev src/database/umzug/migrate.ts",
    "db:seed:all": "ts-node-dev src/database/umzug/seed.ts",
    "db:reset": "npm run db:drop && npm run db:migrate",
    "db:reset:all": "npm start && npm run db:reset && npm run db:seed:all",
    "clean": "rm -rf ./build",
    "build": "npm run clean && tsc --build tsconfig.json",
    "postbuild": "cp serverless-offline.yml ./build && cp serverless-dev.yml ./build && cp serverless-prod.yml ./build && cp .env ./build && cp -R node_modules ./build",
    "deploy": "cd build && npm install --only=prod && sls deploy --stage dev --region eu-west-2 && cd ..",
    "deploy2": "sls deploy --stage dev --region eu-west-2",
    "build-deploy": "npm run build && npm run deploy2",
    "deploy-offline2": "npm run postbuild && cd build && sls offline",
    "deploy-offline": "sls offline --config serverless-offline.yml",
    "git-push": "git add . && git commit -m 'more additions' && git push",
    "create-migration-files-reset-all": "npm run clean && tsc --build tsconfig.json && npx makemigration",
    "db:drop2": "sequelize-cli db:drop",
    "db:create2": "sequelize-cli db:create",
    "create-migration-files": "tsc --build tsconfig.json && npx makemigration"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/pg": "^8.6.3",
    "@types/randomstring": "^1.1.8",
    "axios": "^0.25.0",
    "bcrypt": "^5.0.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^5.0.2",
    "http-status": "^1.5.0",
    "joi": "^17.5.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "pg": "^8.7.1",
    "randomstring": "^1.2.2",
    "sequelize": "^6.19.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4",
    "umzug": "^3.0.0",
    "winston": "^3.3.4",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/faker": "^5.5.8",
    "@types/jest": "^27.4.0",
    "@types/supertest": "^2.0.11",
    "faker": "^5.5.3",
    "jest": "^27.5.0",
    "jest-cli": "^27.5.0",
    "sequelize-auto-migrations-v2": "^1.2.1",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3"
  }
}
